/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    // "module": "CommonJS",
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node",
      "jest"
    ],
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.worker.ts"
  ]
}

/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/worker",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    // "module": "CommonJS",
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.worker.ts"
  ]
}